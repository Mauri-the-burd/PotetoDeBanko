        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bank"
        mc:Ignorable="d"
        Title="Pincode" Height="218" Width="490">
    <Grid Background="#FFDCAC84">
        <DockPanel LastChildFill="False" Margin="0,0,0,133" Background="#FF1E1E1E"/>
        <Button Content="PIN" HorizontalAlignment="Center" Margin="0,140,0,0" VerticalAlignment="Top" Width="174" Height="31" Background="#FF44BBA2" Click="Button_Click"/>
        <PasswordBox HorizontalAlignment="Left" Margin="108,83,0,0" VerticalAlignment="Top" Width="280" Height="52" x:Name="PinCodeBox"/>

    </Grid>
</Window>
